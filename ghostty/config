# Ghostty Terminal Configuration
# https://ghostty.org/docs/config

# Theme - Catppuccin Mocha (matches VS Code theme)
theme = Catppuccin Mocha

# Font
font-family = JetBrainsMono Nerd Font
font-size = 14
font-thicken = true

# Window
window-padding-x = 10
window-padding-y = 10
window-decoration = true
window-theme = ghostty
window-save-state = always
window-inherit-working-directory = true
window-inherit-font-size = true

# Cursor
cursor-style = block
cursor-style-blink = false

# Terminal
term = xterm-256color

# Shell integration
shell-integration = detect

# Keybindings
keybind = cmd+shift+t=new_tab
keybind = cmd+shift+n=new_window
keybind = cmd+w=close_surface
keybind = cmd+shift+,=reload_config

# Copy/Paste
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false
clipboard-paste-bracketed-safe = false
copy-on-select = clipboard

# Links - cmd+click to open URLs (shift+cmd+click inside tmux)
link-url = true

# Scrollback
scrollback-limit = 10000
